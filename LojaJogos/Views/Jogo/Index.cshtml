@model LojaJogos.Models.Jogo
@{
    ViewBag.Title = "Index";
}

<h3>Cadastrar Jogo</h3>
@using (Html.BeginForm("CadJogo","Jogo",FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.CodJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodJogo)
            @Html.ValidationMessageFor(model => model.CodJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NomeJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NomeJogo)
            @Html.ValidationMessageFor(model => model.NomeJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.VersaoJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VersaoJogo)
            @Html.ValidationMessageFor(model => model.VersaoJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DesJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DesJogo)
            @Html.ValidationMessageFor(model => model.DesJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.GeneroJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GeneroJogo)
            @Html.ValidationMessageFor(model => model.GeneroJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.EtariaJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EtariaJogo)
            @Html.ValidationMessageFor(model => model.EtariaJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PlatJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlatJogo)
            @Html.ValidationMessageFor(model => model.PlatJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AnoJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AnoJogo)
            @Html.ValidationMessageFor(model => model.AnoJogo)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SinopseJogo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SinopseJogo)
            @Html.ValidationMessageFor(model => model.SinopseJogo)
        </div>
        <div>
            <br />
            <input type="submit" value="Enviar!" />
        </div>
    </fieldset>

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
        @Scripts.Render("~/bundles/jqueryval");
        <script>
            $(function () {
                $('#CodJogo').mask('0000-00');
                $('#VersaoJogo').mask('0.0.0');
                $('#EtariaJogo').mask('00');
                $('#AnoJogo').mask('0000');

            });

        </script>
    }
}

